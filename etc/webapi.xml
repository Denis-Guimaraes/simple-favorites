<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/customers/favorites/mine/:productId" method="GET">
        <service class="SimpleMage\SimpleFavorites\Api\CustomerFavoriteRepositoryInterface" method="getByIds" />
        <resources>
            <resource ref="self" />
        </resources>
        <data>
            <parameter name="customerId" force="true">%customer_id%</parameter>
        </data>
    </route>
    <route url="/V1/customers/favorites/mine" method="POST">
        <service class="SimpleMage\SimpleFavorites\Api\CustomerFavoriteRepositoryInterface" method="saveByIds" />
        <resources>
            <resource ref="self" />
        </resources>
        <data>
            <parameter name="customerId" force="true">%customer_id%</parameter>
        </data>
    </route>
    <route url="/V1/customers/favorites/mine/:productId" method="DELETE">
        <service class="SimpleMage\SimpleFavorites\Api\CustomerFavoriteRepositoryInterface" method="deleteByIds" />
        <resources>
            <resource ref="self" />
        </resources>
        <data>
            <parameter name="customerId" force="true">%customer_id%</parameter>
        </data>
    </route>
</routes>