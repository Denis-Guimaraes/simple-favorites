<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="top.links">
            <block class="Magento\Customer\Block\Account\SortLinkInterface" name="header-navigation-favorites-link">
                <arguments>
                    <argument name="path" xsi:type="string">favorite</argument>
                    <argument name="label" xsi:type="string" translate="true">My favorites</argument>
                    <argument name="sortOrder" xsi:type="number">50</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>